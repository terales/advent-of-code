    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${fileDirname}/solution",
            "cwd": "${fileDirname}",
            "preLaunchTask": "cmake-build",
            "args": [
                "${input:inputFile}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "type": "promptString",
            "description": "File with challenge input",
            "default": "first.sample"
        }
    ]
}